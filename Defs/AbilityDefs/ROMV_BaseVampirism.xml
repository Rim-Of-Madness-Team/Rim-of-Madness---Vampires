 <Vampire.VitaeAbilityDef ParentName="BaseVampAbility">
   <defName>ROMV_VampiricResurrection</defName>
   <label>resurrection</label>
   <bloodCost>1</bloodCost>
   <uiIconPath>UI/Icons/Commands/Vampirism_Resurrect</uiIconPath>
   <description>Pushes all remaining vitae to reanimate dead tissue, restoring the vampire to undeath. Beware! This will unleash their inner-beast until they are satiated with blood.</description>
   <MainVerb Class="AbilityUser.VerbProperties_Ability">
     <verbClass>Vampire.DisciplineEffect_VampiricHealing</verbClass>
     <hasStandardCommand>true</hasStandardCommand>
     <defaultProjectile>ROMV_DominateProjectile</defaultProjectile>
     <abilityDef>ROMV_VampiricResurrection</abilityDef>
     <isViolent>false</isViolent>
     <warmupTime>0</warmupTime>
     <SecondsToRecharge>0</SecondsToRecharge>
     <range>24</range>
     <burstShotCount>1</burstShotCount>
     <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
     <soundCast>ROMV_AbilityCastSound_Blood</soundCast>
     <muzzleFlashScale>20</muzzleFlashScale>
     <isPrimary>false</isPrimary>
     <AbilityTargetCategory>TargetSelf</AbilityTargetCategory>
     <targetParams>
       <canTargetLocations>false</canTargetLocations>
       <canTargetPawns>false</canTargetPawns>
       <canTargetBuildings>false</canTargetBuildings>
       <canTargetItems>false</canTargetItems>
       <canTargetSelf>true</canTargetSelf>
     </targetParams>
     <tooltipShowProjectileDamage>false</tooltipShowProjectileDamage>
     <tooltipShowExtraDamages>false</tooltipShowExtraDamages>
     <tooltipShowHediffsToApply>false</tooltipShowHediffsToApply>
     <tooltipShowMentalStatesToApply>false</tooltipShowMentalStatesToApply>
   </MainVerb>
 </Vampire.VitaeAbilityDef>

