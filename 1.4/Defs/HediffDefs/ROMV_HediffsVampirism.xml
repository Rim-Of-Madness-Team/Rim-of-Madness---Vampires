  <HediffDef>
    <defName>ROMV_TheBeast</defName>
    <description>The Beast</description>
    <hediffClass>Vampire.HediffWithComps_BeastHunger</hediffClass>
    <defaultLabelColor>(0.8, 0.3, 0.8)</defaultLabelColor>
    <label>the beast</label>
    <stages>
      <li>
        <label>cravings</label>
      </li>
      <li>
        <label>hungry</label>
        <minSeverity>0.2</minSeverity>
      </li>
      <li>
        <label>starving</label>
        <minSeverity>0.35</minSeverity>
        <painOffset>-0.1</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>unleashed</label>
        <minSeverity>0.62</minSeverity>
        <painOffset>-0.9</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>3.0</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>3.0</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>3.0</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>3.0</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>ROMV_SunExposure</defName>
    <hediffClass>Vampire.HediffWithComps_SunlightExposure</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <label>sunlight exposure</label>
    <description>sunlight exposure</description>
    <lethalSeverity>1</lethalSeverity>
    <stages>
      <li>
        <label>initial</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.35</minSeverity>
        <painOffset>0.15</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.62</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <painOffset>0.30</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>
