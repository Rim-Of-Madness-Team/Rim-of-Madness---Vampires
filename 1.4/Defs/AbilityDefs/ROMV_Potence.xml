<Defs>

  <Vampire.DisciplineDef>
    <defName>ROMV_Potence</defName>
    <label>Potence</label>
    <abilities>
      <li>ROMV_PotenceI</li>
      <li>ROMV_PotenceII</li>
      <li>ROMV_PotenceIII</li>
      <li>ROMV_PotenceIV</li>
